import cv2
import numpy as np

def detect_organ_contours(image_path):
    # Charger l'image en niveaux de gris
    image = cv2.imread(image_path)
    gray = cv2.cvtColor(image, cv2.COLOR_BGR2GRAY)
    
    # Appliquer un flou gaussien pour réduire le bruit
    blurred = cv2.GaussianBlur(gray, (5, 5), 0)
    
    # Détecter les contours avec l'algorithme de Canny
    edges = cv2.Canny(blurred, 50, 150)
    
    # Trouver les contours dans l'image
    contours, _ = cv2.findContours(edges.copy(), cv2.RETR_EXTERNAL, cv2.CHAIN_APPROX_SIMPLE)
    
    # Dessiner les contours sur l'image originale
    organ_contours_image = image.copy()
    cv2.drawContours(organ_contours_image, contours, -1, (0, 255, 0), 2)
    
    # Afficher l'image avec les contours détectés
    cv2.imshow('Organ Contours', organ_contours_image)
    cv2.waitKey(0)
    cv2.destroyAllWindows()

# Appeler la fonction avec le chemin de l'image
detect_organ_contours("path_to_image.jpg")  
